[user]
    name = Carlo Teubner
    email = carlo@cteubner.net

[init]
    defaultBranch = master

[diff]
    algorithm = histogram
    colorMoved = dimmed-zebra
    mnemonicPrefix = true
    tool = nvimdiff

[commit]
    verbose = true

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[merge]
    conflictStyle = zdiff3
    tool = nvimdiff

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[rerere]
    enabled = true

[fetch]
    prune = true
    pruneTags = true

[push]
    autoSetupRemote = true

[credential]
    helper = cache

[sendemail]
    confirm = auto
    smtpServer = smtp.fastmail.com
    smtpServerPort = 465
    smtpEncryption = ssl
    smtpUser = carlo@cteubner.net

[interactive]
    singleKey = true

[column]
    ui = auto

[advice]
    detachedHead = false

[alias]
    pushf = push -f --force-with-lease

[url "git@github.com:c4rlo/"]
    insteadOf = c:

[url "git@github.com:"]
    insteadOf = g:
    insteadOf = gh:
    insteadOf = github.com:

; [url "git@gitlab.com:"]  -- gives me "git@gitlab.com: Permission denied (publickey)."
[url "https://gitlab.com/"]
    insteadOf = gl:
    insteadOf = gitlab.com:

[url "ssh://aur/"]
    insteadOf = aur:
