[user]
    name = Carlo Teubner
    email = carlo@cteubner.net

[init]
    defaultBranch = master

[diff]
    algorithm = histogram
    colorMoved = dimmed-zebra
    tool = nvimdiff

[commit]
    verbose = true

[merge]
    conflictStyle = zdiff3
    tool = nvimdiff

[rebase]
    autoSquash = true

[rerere]
    enabled = true

[credential]
    helper = cache

[sendemail]
    confirm = auto
    smtpServer = smtp.fastmail.com
    smtpServerPort = 465
    smtpEncryption = ssl
    smtpUser = carlo@cteubner.net

[interactive]
    singleKey = true

[advice]
    detachedHead = false

[url "git@github.com:c4rlo/"]
    insteadOf = c:

[url "git@github.com:"]
    insteadOf = g:
    insteadOf = gh:
    insteadOf = github.com:

; [url "git@gitlab.com:"]  -- gives me "git@gitlab.com: Permission denied (publickey)."
[url "https://gitlab.com/"]
    insteadOf = gl:
    insteadOf = gitlab.com:

[url "ssh://aur/"]
    insteadOf = aur:
